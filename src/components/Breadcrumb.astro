---
import Link from "./Link.astro";

const { pathname } = Astro.url

let breadcrum = pathname.split('/')
  .filter(el => el !== '')
  .map(el => el.replaceAll('-', ' '))
  .map(el => {
    return !el.includes(' ') 
      ? el[0].toUpperCase() + el.substring(1)
      : el.split(' ').map(word => word[0].toUpperCase() + word.substring(1)).join(' ')
  })

const to = breadcrum
  .map(el => '/' + el.replaceAll(' ', '-'))
  .map((el, i, arr) => i-1 > -1 ? (arr[i-1] + el).toLowerCase() : el.toLowerCase())
---

<div class="px-4 md:px-20 lg:px-60 mt-12">
  <div class="max-w-3xl mx-auto">
    { 
      breadcrum.map((bread, i) => {
        return i-1 > -1 
          ? <img src="https://img.icons8.com/material-sharp/16/f8efd4/chevron-right.png" width="16px" class="inline mr-4"/>
            <Link href={ to[i] } classname={ i == to.length-1 ? 'hover:no-underline pointer-events-none' : 'hover:no-underline' }>
              <p class={ i == to.length-1 ? "text-second text-sm font-bold inline mr-4" : "text-bright text-sm font-bold inline mr-4 hover:text-second" }>{ bread }</p>
            </Link> 
          : <Link href={ to[i] } classname='hover:no-underline'>
              <p class={ i == to.length-1 ? "text-second text-sm font-bold inline mr-4" : "text-bright text-sm font-bold inline mr-4 hover:text-second" }>{ bread }</p>
            </Link>
        })
    }
  </div>
</div>