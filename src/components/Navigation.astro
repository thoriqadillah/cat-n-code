---
interface Props {
  href: string
  classname?: string
}

const { href, classname } = Astro.props
const { pathname } = Astro.url

const setCurrent = pathname.substring(11) == href + (href.length !== 1 ? '/' : '') ? 'font-bold text-main' : 'hover:text-second'
const style = `text-bright px-3 py-2 hover:no-underline ${ classname } ${ setCurrent }`

import Link from './Link.astro'
---

<Link href={ href } classname={ style }>
  <slot/>
</Link>