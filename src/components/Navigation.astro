---
interface Props {
  href: string
  classname?: string
}

const { href, classname } = Astro.props
const { pathname } = Astro.url

const setCurrent = pathname === href ? 'font-bold text-main' : 'hover:text-second'
const style = `text-bright px-3 py-2 ${ classname } ${ setCurrent }`
---

<a href={ href } class={ style }>
  <slot/>
</a>